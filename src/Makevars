CPP = ccache /usr/local/opt/llvm/bin/clang
CXX = ccache /usr/local/opt/llvm/bin/clang
CCACHE_CPP2=yes
CPPFLAGS = -I/usr/local/opt/llvm/include -fopenmp
#LDFLAGS = -L/usr/local/opt/llvm/lib -lprofiler
LDFLAGS="-L/usr/local/opt/llvm/lib -Wl -lprofiler,-rpath,/usr/local/opt/llvm/lib"
PKG_CXXFLAGS = $(SHLIB_OPENMP_CXXFLAGS) -DARMA_64BIT_WORD -Wno-ignored-attributes -Wno-unknown-pragmas -UNDEBUG -g
PKG_LIBS = $(SHLIB_OPENMP_CXXFLAGS) $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) -lprofiler
CXX_STD = CXX11
PKG_LIBS += $(shell ${R_HOME}/bin/Rscript -e "RcppParallel::RcppParallelLibs()")
