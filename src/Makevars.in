
# This is necesary since ARMADILLO now supports OpenMP
PKG_CXXFLAGS=@OPENMP_CFLAGS@ $(SHLIB_OPENMP_CXXFLAGS) -DARMA_64BIT_WORD -DSTRICT_R_HEADERS -DNDEBUG

#PKG_CPPFLAGS=@OPENMP_CFLAGS@
PKG_LIBS=@OPENMP_CFLAGS@ @LIBS@
PKG_LIBS = $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) $(SHLIB_OPENMP_CXXFLAGS) @OPENMP_CFLAGS@ -DNDEBUG
# Necessary for RcppParallel
PKG_LIBS += $(shell ${R_HOME}/bin/Rscript -e "RcppParallel::RcppParallelLibs()")


